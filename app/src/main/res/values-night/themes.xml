<resources >
    <!-- Base application theme. -->
    <style name="Theme.Nana" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#00BFFF</item>
        <item name="colorPrimaryVariant">#00BFFF</item>
        <item name="colorOnPrimary">#242527</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#00BFFF</item>
        <item name="colorSecondaryVariant">#00BFFF</item>
        <item name="colorOnSecondary">#242527</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="Widget.Nana.TextView" parent="@style/Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="Widget.Nana.Fab" parent="ThemeOverlay.Material3.FloatingActionButton.Primary">
        <item name="android:backgroundTint">#121212</item>
        <item name="tint">@color/grey</item>
    </style>

    <style name="Widget.Nana.ImageView" parent="@style/Widget.AppCompat.ImageButton">
        <item name="android:background">@color/transparent</item>
        <item name="tint">@color/white</item>
    </style>

    <style name="Widget.Nana.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="android:background">@color/black</item>
    </style>

    <style name="Widget.Nana.CardViewSettings1" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/grey</item>
    </style>

    <style name="Widget.Nana.CardViewSettings2" parent="Widget.MaterialComponents.CardView">

    </style>

    <style name="Theme.Nana.Toolbar">
        <item name="android:background">@color/black</item>
    </style>
</resources>