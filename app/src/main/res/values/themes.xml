<resources>
    <!-- Base application theme. -->
    <style name="Theme.Nana" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#00BFFF</item>
        <item name="colorPrimaryVariant">#00BFFF</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#00BFFF</item>
        <item name="colorSecondaryVariant">#00BFFF</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="titleToolbarTextSize">
        <item name="android:textSize">@dimen/dimen_28_text</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Widget.Nana.TextView" parent="@style/Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="Widget.Nana.Fab" parent="ThemeOverlay.Material3.FloatingActionButton.Primary">
        <item name="android:backgroundTint">@color/white</item>
        <item name="tint">@color/black</item>
    </style>

    <style name="Widget.Nana.ImageView" parent="@style/Widget.AppCompat.ImageButton">
        <item name="android:background">@color/transparent</item>
        <item name="tint">@color/black</item>
    </style>

    <style name="Widget.Nana.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="android:background">@drawable/frame_blue</item>
    </style>

    <style name="Widget.Nana.CardViewSettings1" parent="Widget.MaterialComponents.CardView">
        <item name="android:background">@drawable/frame_grey</item>
    </style>

    <style name="Widget.Nana.CardViewSettings2" parent="Widget.MaterialComponents.CardView">

    </style>

    <style name="Theme.Nana.Toolbar">
        <item name="android:background">@color/white</item>
    </style>

    <style name="Theme.Nana.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Nana.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Nana.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.Nana.NoActionBar.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Nana.NoActionBar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Nana.NoActionBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>